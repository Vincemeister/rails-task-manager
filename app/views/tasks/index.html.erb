<% @tasks.each do |task| %>
  <div class="d-flex border m-5 text-info">
    <% if task.completed   %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>


    <h2><%= link_to task.title, task_path(task) %></h2>



    <%= link_to task_path(task.id),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i> delete
      <% end %>
  </div>
<% end %>



<%= link_to "Add a task", tasks_new_path, class: "btn btn-primary" %>

